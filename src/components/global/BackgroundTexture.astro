---
import { Image } from "astro:assets";
import textureImage from "@assets/images/portfolio/texture.png";
---

<div class="texture-wrap">
	<Image
		src={textureImage}
		alt=""
		class="texture-image"
		format="webp"
		quality={50}
		loading="lazy"
	/>
</div>

<style>
	.texture-wrap {
		pointer-events: none;
		z-index: 3000;
		width: 100%;
		height: 100%;
		position: fixed;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
	}
	.texture-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		position: relative;
		opacity: 0.75;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
	}
</style>
